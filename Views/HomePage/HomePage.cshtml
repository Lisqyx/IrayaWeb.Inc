    .fab {
        color:white;
    }
    .fab:hover{
        color: var(--text-dark)
    }
    .newsletter-form {
        display: flex;
    }
    .newsletter-form input {
        flex-grow: 1;
        padding: 12px 15px;
        border: none;
        border-radius: 5px 0 0 5px;
        font-family: 'Poppins', sans-serif;
    }
    .newsletter-btn {
        background-color: red;
        color: var(--primary-dark);
        border: none;
        border-radius: 0 5px 5px 0;
        padding: 0 15px;
        cursor: pointer;
