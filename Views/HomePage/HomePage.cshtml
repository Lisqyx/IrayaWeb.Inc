        height: 100%;
        margin: 0;
        overflow-x: hidden;
    }

    :root {
        --primary-dark: #1a3a5f;     /* Dark blue */
        --primary-medium: #2c5f8e;   /* Medium blue */
        --primary-light: #4b7dbb;    /* Light blue */
        --accent: #e9b44c;           /* Gold accent */
        --accent-hover: #d4973b;     /* Darker gold for hover states */
        --text-light: #ffffff;       /* White text */
        --text-dark: #333333;        /* Dark gray text */
        --background-light: #f5f7fa; /* Light background */
        --overlay-dark: rgba(26, 58, 95, 0.8); /* Dark overlay */
    }

    .parallax-hero {
        height: 90vh;
        position: relative;
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        background-image: url('@Url.Content("~/Content/Images/cover.jpg")');
        box-shadow: inset 0 0 0 2000px rgba(26, 58, 95, 0.4);
    }

    .hero-content {
        position: absolute;
        bottom: 20%;
        left: 10%;
        color: var(--text-light);
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }

    .hero-content h1 {
        font-size: 4rem;
        margin-bottom: 1rem;
        color: var(--text-light);
    }

    .hero-content p {
        font-size: 1.5rem;
        max-width: 600px;
        color: var(--text-light);
    }

    .parallax-section {
        position: relative;
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        min-height: 100vh;
    }

    .content-section {
        position: relative;
        padding: 5rem 0;
    }

    .about-section {
        background-color: var(--background-light);
        padding: 4rem 0;
        z-index: 1;
    }

    .about-section h1 {
        color: var(--primary-dark);
    }

    .services-section {
        background-image: url('@Url.Content("~/Content/Images/DarkenService.jpg")');
        box-shadow: inset 0 0 0 2000px var(--overlay-dark);
        color: var(--text-light);
        text-align: center;
        padding: 60px 20px;
        z-index: 1;
    }

    .projects-section {
        text-align: center;
        padding: 50px;
        background-color: var(--background-light);
        z-index: 1;
    }

    .projects-section h2 {
        color: var(--primary-dark);
    }

    .section-content {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 2rem;
        border-radius: 8px;
    }

    .navbar {
        background-color: var(--primary-dark);
        padding: 15px 40px;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        word-spacing: 2px;
        font-size: 18px;
        position: fixed;
        width: 100%;
        z-index: 1000;
    }

    .navbar-brand {
        color: var(--text-light);
        margin-left: 10px;
    }

    .navbar-nav .nav-item {
        margin: 0 15px;
    }

    .navbar-nav .nav-item .nav-link {
        color: var(--text-light);
        font-weight: 500;
        transition: color 0.3s ease-in-out;
        padding: 8px 12px;
    }

    .navbar-nav .nav-item .nav-link:hover {
        color: var(--accent);
    }

    .quote-btn:hover {
        background-color: var(--accent-hover);
        color: var(--text-light);
    }

    .services-container {
        max-width: 1100px;
        margin: auto;
        display: flex;
        justify-content: space-between;
        gap: 40px;
    }

    .services-section h2 {
        color: var(--text-light);
        margin-bottom: 40px;
    }

    .service-item {
        flex: 1;
        text-align: center;
        background-color: rgba(255, 255, 255, 0.1);
        padding: 20px;
        border-radius: 8px;
        transition: transform 0.3s;
        opacity: 0;
        transform: translateY(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .service-item.active {
        opacity: 1;
        transform: translateY(0);
    }

    .service-item:hover {
        transform: translateY(-10px);
        background-color: rgba(255, 255, 255, 0.2);
    }

    .service-item img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid var(--accent);
    }

    .service-title {
        font-size: 20px;
        font-weight: bold;
        margin-top: 15px;
        color: var(--accent);
    }

    .service-description {
        font-size: 16px;
        margin-top: 10px;
        color: var(--text-light);
    }

    .service-description ul li {
        color: var(--text-light);
    }

    .projects-container {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .project-card {
        width: 300px;
        background: white;
        border-radius: 8px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s;
        opacity: 0;
        transform: translateY(20px);
        border: 1px solid #e0e0e0;
    }

    .project-card.active {
        opacity: 1;
        transform: translateY(0);
    }

    .project-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .project-card img {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }

    .project-title {
        padding: 15px;
        font-size: 18px;
        font-weight: bold;
        color: var(--primary-dark);
    }

    .view-all-btn {
        margin-top: 30px;
        padding: 12px 20px;
        background: var(--primary-medium);
        color: var(--text-light);
        border: none;
        cursor: pointer;
        border-radius: 5px;
        font-size: 16px;
        transition: 0.3s;
    }

    .view-all-btn:hover {
        background: var(--primary-dark);
    }

    .scroll-down {
        position: absolute;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        animation: bounce 2s infinite;
        color: var(--text-light);
        cursor: pointer;
    }

    keyframes bounce {
        0%, 20%, 50%, 80%, 100% {transform: translateY(0) translateX(-50%);}
        40% {transform: translateY(-30px) translateX(-50%);}
        60% {transform: translateY(-15px) translateX(-50%);}
    }

    .locations-section {
        background-image: linear-gradient(rgba(26, 58, 95, 0.9), rgba(26, 58, 95, 0.9)), url('@Url.Content("~/Content/Images/DarkenService.jpg")');
        background-size: cover;
        background-position: center;
        color: var(--text-light);
        padding: 80px 0;
        text-align: center;
    }

    .section-title {
        font-size: 2.5rem;
        margin-bottom: 50px;
        font-weight: 500;
        color: var(--text-light);
    }

    .locations-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 30px;
        max-width: 1100px;
        margin: 0 auto 40px;
    }

    .location-card {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        padding: 30px;
        transition: transform 0.3s, background-color 0.3s;
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .location-card:hover {
        transform: translateY(-10px);
        background-color: rgba(255, 255, 255, 0.2);
    }
    .location-title {
        font-size: 1.5rem;
        margin-bottom: 15px;
        font-weight: 600;
        color: var(--text-light);
    }

    .location-divider {
        height: 3px;
        width: 50px;
        background-color: var(--accent);
        margin: 0 auto 15px;
    }

    .location-address {
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 20px;
        color: var(--text-light);
    }

    .location-contact {
        display: inline-block;
        color: var(--accent);
        text-decoration: none;
        border: 1px solid var(--accent);
        padding: 8px 15px;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s;
    }

    .location-contact:hover {
        background-color: var(--accent);
        color: var(--primary-dark);
    }

    .map-container {
        position: relative;
        height: 200px;
        background-image: url('@Url.Content("~/Content/Images/philippines-map.jpg")');
        background-size: contain;
        background-position: center;
        background-repeat: no-repeat;
        max-width: 800px;
        margin: 60px auto 0;
        border-radius: 10px;
        overflow: hidden;
        border: 2px solid var(--accent);
    }

    .map-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(26, 58, 95, 0.7);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transition: background-color 0.3s;
    }

    .map-overlay:hover {
        background-color: rgba(26, 58, 95, 0.5);
    }

    .map-overlay p {
        font-size: 1.2rem;
        margin-bottom: 15px;
        color: var(--text-light);
    }

    .view-map-btn {
        background-color: var(--accent);
        color: var(--primary-dark);
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: 600;
        transition: background-color 0.3s;
    }

    .view-map-btn:hover {
        background-color: var(--accent-hover);
    }

    media (max-width: 768px) {
        .services-container, .projects-container {
            flex-direction: column;
            align-items: center;
        }

        .service-item, .project-card {
            width: 90%;
            margin-bottom: 20px;
        }

        .hero-content h1 {
            font-size: 2.5rem;
        }

        .locations-grid {
            grid-template-columns: 1fr;
        }

        .section-title {
            font-size: 2rem;
        }
    }

