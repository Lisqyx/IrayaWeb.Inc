                            <input type="tel" class="form-control" id="phone" name="phone" placeholder="Enter your contact number" required>
                        </div>

                        <div>
                            <label for="message" class="form-label">How can we help?</label>
                            <textarea class="form-control" id="message" name="message" rows="3" placeholder="How can we help?" required></textarea>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="newsletter" name="newsletter">
                            <label class="form-check-label" for="newsletter">Yes, I would like to receive information regarding new products, services and offers</label>
                        </div>

                        <!-- Honeypot Spam Protection -->
                        <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

                        <div class="text-center">
                            <button type="submit" class="btn btn-lg" style="background-color: var(--maroon); color: white;">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
