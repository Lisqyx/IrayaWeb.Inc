<style>
    import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');
    body, html {
        font-family: 'Poppins', sans-serif;
        height: 100%;
        margin: 0;
        overflow-x: hidden;
    }
    :root {
        --primary-dark: #1a3a5f; /* Dark blue */
        --primary-medium: #2c5f8e; /* Medium blue */
        --primary-light: #4b7dbb; /* Light blue */
        --text-light: #ffffff; /* White text */
        --text-dark: #333333; /* Dark gray text */
        --background-light: #f5f7fa; /* Light background */
        --overlay-dark: rgba(26, 58, 95, 0.8); /* Dark overlay */
        --maroon: #800000;
    }
    /*PARALLAX EFFECT*/
    .parallax-hero {
        height: 90vh;
        position: relative;
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        background-image: url('@Url.Content("~/Content/Images/Cover.jpg")');
        box-shadow: inset 0 0 0 2000px rgba(128, 0, 0, 0.1);
    }
    .parallax-section {
        position: relative;
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        height: auto;
    }
    /*COVER SECTION*/
    .cover-content {
        position: absolute;
        bottom: 20%;
        left: 10%;
        color: var(--text-light);
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        margin-bottom:150px;
    }
    .cover-content h1 {
        font-size: 4rem;
        margin-bottom: 1rem;
        color: var(--text-light);
    }
    .cover-content p {
        font-size: 1.5rem;
        max-width: 600px;
        color: var(--text-light);
    }
    .content-section {
        position: relative;
    }

    /*NAVBAR**/
    .Logo{
    height:70px;
    margin-left:100px;
    }

    .navbar {
        background-color: var(--maroon);
        font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 20px;
        position: fixed;
        width: 100%;
        z-index: 1000;
    }
    .navbar-brand {
        color: var(--text   -light);
        margin-left: 10px;
    }
    .navbar-nav .nav-item {
        margin: 0 5px;
    }
    .navbar-nav .nav-item .nav-link {
        color: var(--text-light);
        padding: 8px 12px;
    }
    /*ABOUT SECTION*/
    .about-section {
        background-color: var(--background-light);
        padding: 3rem 0;
        z-index: 1;
        font-size:26px;
    }
    .about-section h1 {
            color: var(--primary-dark);
    }

    /*SERVICES SECTION*/
    .services-slide {
        height: 400px;
        position: relative;
        color: var(--text-light);
    }
    .services-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(118, 8, 7, 0.45);
        display: flex;
        align-items: center;
    }
    .service-title {
        font-size: 2.5rem;
        font-weight: 600;
        color: #f02b08;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        position: relative;
        padding-bottom: 15px;
        margin-bottom: 20px;
        margin-left: 20px;
    }
        .service-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 250px;
            height: 4px;
            background-color: #c12346;
        }
    .service-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    .service-list li {
        margin-bottom: 20px;
        position: relative;
        padding-left: 20px;
    }
    .service-list li::before {
        content: '•';
        color: var(--text-light);
        font-size: 24px;
        position: absolute;
        left: 0;
        top: -2px;
    }
    .service-list h4 {
        font-size: 1.3rem;
        margin-bottom: 5px;
        color: var(--text-light);
    }
    .service-list p {
        font-size: 1rem;
        color: rgba(255, 255, 255, 0.9);
    }
    #servicesCarousel .carousel-indicators {
        bottom: 20px;
    }
    #servicesCarousel .carousel-indicators button.active {
        background-color: var(--accent);
    }
    media (max-width: 992px) {
        .service-title {
            font-size: 2rem;
            text-align: center;
        }
        .service-title:after {
            left: 50%;
            transform: translateX(-50%);
        }
    }
    media (max-width: 768px) {
        .services-slide {
            height: auto;
            min-height: 600px;
        }
        .services-overlay {
            padding: 60px 0;
        }
        .service-title {
            margin-bottom: 30px;
        }
        .service-list li {
            margin-bottom: 15px;
        }
        .service-list h4 {
            font-size: 1.2rem;
        }
    }

    /*PROJECT SECTION*/
    .projects-section {
        text-align: center;
        padding: 50px;
        background-color: var(--background-light);
        z-index: 1;
    }
        .projects-section h2 {
            color: var(--maroon);
        }
    .projects-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: stretch;
        gap: 20px;
    }
    .project-card {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        text-align: center;
        background: white;
        border-radius: 8px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border: 1px solid #e0e0e0;
    }
    .project-card img {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }
    .project-title {
        flex-grow: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 15px;
        font-size: 18px;
        font-weight: bold;
        color: var(--maroon);
        text-align: center;
    }
    /* LOCATION SECTION */
    .locations-section {
        padding: 40px 0;
        position: relative;
        background-position: center;
        background-size: cover;
    }
        .locations-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(118, 8, 7, 0.50);
            z-index: 0;
        }
    .locations-section .container {
        position: relative;
        z-index: 1;
    }
        .location-details {
            color: white;
            padding: 30px;
        }

            .location-details h3 {
                font-size: 2rem;
                font-weight: 500;
                margin-bottom: 20px;
                color: white;
                border-bottom: 3px solid #f02b08;
                padding-bottom: 10px;
            }

            .location-details h4 {
                color: white;
                font-size: 1.3rem;
                margin-bottom: 10px;
            }

                .location-details h4 i {
                    color: #f02b08;
                    margin-right: 10px;
                }

            .location-details p {
                color: white;
                margin-bottom: 5px;
                font-size: 1.1rem;
            }
    /*To make page responsive*/
    media (max-width: 992px) {
        .location-details {
            margin-top: 30px;
        }
    }

    media (max-width: 768px) {
        .locations-section {
            padding: 60px 0;
        }
    }
     /*CONTACT SECTION*/
    .contact-section {
        padding: 80px 0;
        position: relative;
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
    .section-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 30px;
        font-weight: 500;
        color: #fff;
        position: relative;
        z-index: 2;
    }
    .contact-container {
        max-width: 1100px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }
    .contact-form-container {
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
        display: flex;
        flex-direction: column;
    }
        .form-control {
    padding: 12px 15px;
    border-radius: 5px;
    border: 1px solid #e0e0e0;
    background-color: #f5f5f5;
    font-family: 'Poppins', sans-serif;
}

.form-control:focus {
    border-color: var(--maroon);
    box-shadow: 0 0 0 0.2rem rgba(128, 0, 0, 0.25);
}

.form-label {
    font-weight: 500;
    color: var(--text-dark);
    margin-bottom: 5px;
}

.btn {
    padding: 10px 30px;
    font-weight: 500;
    transition: all 0.3s ease;
}

.btn:hover {
    background-color: #a60000;
    transform: translateY(-2px);
}

.form-check-input:checked {
    background-color: var(--maroon);
    border-color: var(--maroon);
}

media (max-width: 768px) {
    .row {
        margin-left: -5px;
        margin-right: -5px;
    }
    .col-md-6 {
        padding-left: 5px;
        padding-right: 5px;
    }
}
    /*To make page responsive*/
    media (max-width: 992px) {
        .contact-info-grid {
            grid-template-columns: 1fr;
